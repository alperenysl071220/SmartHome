<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vaccum_Option">
    <RelativeLayout
        android:id="@+id/animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/animation"
        >

        <View
            android:id="@+id/background_top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/background_2" />

        <ImageButton
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/user"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/smart_home"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:text="@string/smart_home"
            android:layout_marginStart="130dp"
            android:textAppearance="@style/smart_home_2"
            android:gravity="center_horizontal|center_vertical"
            />

        <View
            android:id="@+id/background"
            android:layout_width="360dp"
            android:layout_height="520dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp"
            android:background="@drawable/background_add_device"
            />

        <View
            android:id="@+id/line_1"
            android:layout_width="358dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="145dp"
            android:background="@drawable/line_1"
            />

        <TextView
            android:id="@+id/vacuum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="110dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Vacuum Cleaner"
            android:textAppearance="@style/my_devices" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="193dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="140dp"
                android:layout_height="80dp"
                app:shapeAppearanceOverlay="@style/roundButtonView"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="9dp"
                android:textSize="16sp"
                android:text="@string/power_status" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="40dp"
                android:text="@string/on"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="40dp"
                android:textSize="16sp"
                android:text="Off" />

            <Switch
                android:id="@+id/onOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="44dp"
                android:layout_marginTop="38dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="193dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/clean_all"
                android:layout_width="140dp"
                android:layout_height="80dp"
                app:shapeAppearanceOverlay="@style/roundButtonView"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="38dp"
                android:layout_marginTop="27dp"
                android:textSize="16sp"
                android:text="Clean All" />
        </RelativeLayout>

        <View
            android:id="@+id/line_2"
            android:layout_width="359dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="380dp"
            android:background="@drawable/line_1"
            />

        <TextView
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="345dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Map"
            android:textAppearance="@style/my_devices" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="410dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:background="@color/white"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bedroom"
                android:layout_marginStart="35dp"
                android:layout_marginTop="30dp"/>


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:background="@color/white"
                android:layout_marginTop="80dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kitchen"
                android:layout_marginStart="38dp"
                android:layout_marginTop="110dp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="170dp"
                android:layout_height="160dp"
                android:background="@color/white"
                app:strokeColor="@color/black"
                android:layout_marginStart="130dp"
                app:strokeWidth="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/living_room"
                android:layout_marginStart="175dp"
                android:layout_marginTop="70dp"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="262dp"
                android:layout_marginTop="122dp"
                android:background="@drawable/vaccum" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>